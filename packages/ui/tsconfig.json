{
  "extends": "@pin-to-gather/typescript-config/react-library.json",
  "compilerOptions": {
    "jsxImportSource": "@emotion/react",
    "baseUrl": ".",
    "paths": {
      "@/": ["src/"],
      "@components/*": ["src/components/*"],
      "@token/*": ["src/token/*"],
      "@theme/*": ["src/theme/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "dist", "build"]
}
